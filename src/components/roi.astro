---
import { Picture } from "@astrojs/image/components";

import heroImage from "images/hero.jpg";
---

<section>
  <div class="bg-red-50 mx-auto my-24 max-w-6xl w-[90%]">
    <div
      class="relative px-8 lg:px-12 py-12 lg:py-16 grid lg:grid-cols-2 gap-16">
      <div class="flex flex-col gap-8">
        <h2 class="text-2xl lg:text-4xl font-bold">
          List your property with us and increase your ROI
        </h2>

        <p>
          Lorem ipsum dolor, sit amet consectetur adipisicing elit. Voluptas
          odit nostrum, ipsam neque harum deserunt magni nobis quasi vero
          quibusdam distinctio dolore repudiandae.
        </p>

        <button class="self-start">More</button>
      </div>

      <div class="relative grid lg:grid-cols-2 gap-8">
        <Picture
          src={heroImage}
          alt="Ocean view from back porch"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
          class="w-full z-10"
        />

        <Picture
          src={heroImage}
          alt="Ocean view from back porch"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
          class="w-full z-10"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .bg {
    background: rgb(255, 217, 235);
    background: linear-gradient(
      180deg,
      rgba(255, 217, 235, 1) 0%,
      rgba(255, 217, 235, 1) 75%,
      rgba(255, 255, 255, 1) 75%,
      rgba(255, 255, 255, 1) 100%
    );
  }
</style>
