---
import Layout from "../layouts/Layout.astro";

import { Icon } from "astro-icon";
import { Image } from "@astrojs/image/components";

const points = [
  {
    title: "24/7 Guest Services",
    points: [],
    icon: "home-alt",
  },
  {
    title: "Stocked Amenities",
    points: [
      "Self Check In",
      "Complimentary Wifi",
      "Fresh Linens",
      "Hotel Toiletries",
      "Work Space",
    ],
    icon: "lock",
  },
  {
    title: "Easy Payment Processing",
    points: [],
    icon: "emoji-satisfied",
  },
  {
    title: "Clean and Safe",
    points: [],
    icon: "bell",
  },
  {
    title: "Comfortable",
    points: [],
    icon: "key-alt",
  },
  {
    title: "Easy Guest Access",
    points: [],
    icon: "wallet",
  },
];
---

<Layout title="Book">
  <main>
    <section class="px-[5vw] md:px-[10vw] py-16">
      <div class="max-w-screen-xl mx-auto">
        <div class="mx-auto max-w-lg text-center">
          <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
            We Look Forward To Your Stay
          </h2>
          <p class="text-lg mt-4 text-slate-600">
            We partner with residential and commercial landlords to offer a
            hassle-free, passive strategy to renting their property.
          </p>
        </div>

        <div class="grid sm:grid-cols-2 md:grid-cols-3 my-16 gap-12">
          {
            points.map((point) => (
              <div class="flex gap-4 items-start">
                <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
                  <Icon name={point.icon} class="invert" />
                </div>
                <div>
                  <h3 class="font-semibold text-lg">{point.title}</h3>

                  <ol class="list-decimal list-inside">
                    {point.points &&
                      point.points.map((point) => <li>{point}</li>)}
                  </ol>
                </div>
              </div>
            ))
          }
        </div>

        <a
          href=""
          class="w-fit mx-auto rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 px-5 py-2.5 bg-black text-white hover:bg-gray-800 border-2 border-transparent flex gap-1 items-center justify-center">
          Book Stay Now
        </a>
      </div>
    </section>
  </main>
</Layout>
