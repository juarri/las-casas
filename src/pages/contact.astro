---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are a here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Get in touch with us</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Reach out to us if you need assistance or have any questions. We're
          always here to help!
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-3 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:info@lascasasstr.com">info@lascasasstr.com</a
            >
          </div>

          <div class="flex items-center mt-3 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+16194311171">(619) 431-1171</a
            >
          </div>

          <div class="flex items-center mt-3 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:instagram" /><a
              href="https://instagram.com/lascasas.str?igshid=YmMyMTA2M2Y="
              >@lascasas.str</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
